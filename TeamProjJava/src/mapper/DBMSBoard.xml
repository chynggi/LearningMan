<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.BoardDAO">
<resultMap id="result" type="board">
	<result property = "no" column = "NO"/>	
	<result property = "title" column = "TITLE"/>
	<result property = "content" column = "CONTENT"/>
	<result property = "id" column = "ID"/>
	<result property = "xdate" column = "XDATE"/>	
</resultMap>
<sql id="basecolumns">
	NO,TITLE,CONTENT,ID,XDATE
</sql>

<select id = "selectAll" resultMap="result">

	SELECT <include refid= "basecolumns"></include> FROM DBMSBOARD

</select>
<insert id = "insert" parameterType="board">
	
	INSERT INTO DBMSBOARD (<include refid= "basecolumns"></include>) 
	VALUES(DBMSBOARD_SEQ.NEXTVAL,#{title},#{content},#{id},sysdate)
	

</insert>
<update id = "update" parameterType="board">
	UPDATE BOARD SET
	 ID = #{id}, TITLE = #{title}, CONTENT = #{content},XDATE = #{xdate}, 
	 WHERE NO = #{no}
</update>
<delete id = "delete" parameterType="long">
	DELETE FROM DBMSBOARD WHERE NO = #{id}

</delete>
<select id = "info" parameterType="long" resultType="board">
<![CDATA[
	SELECT * FROM DBMSBOARD WHERE NO = #{id}
	]]>
</select>
<select id = "countofcontents" resultType="long">

<![CDATA[
	SELECT COUNT(*) FROM DBMSBOARD
	]]>
</select>



</mapper>