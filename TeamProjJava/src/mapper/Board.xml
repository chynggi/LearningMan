<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.BoardDAO">
<resultMap id="result" type="board">
	<result property = "no" column = "NO"/>	
	<result property = "title" column = "TITLE"/>
	<result property = "content" column = "CONTENT"/>
	<result property = "id" column = "ID"/>
	<result property = "date" column = "DATE"/>	
</resultMap>
<sql id="basecolumns">
	NO,TITLE,CONTENT,ID,DATE
</sql>

<select id = "selectAll" parameterType="String" resultMap="result">

	SELECT <include refid= "basecolumns"></include> FROM #{dbname}

</select>
<insert id = "insert" parameterType="hashmap"
	>
	
	INSERT INTO #{dbname} (<include refid= "basecolumns"></include>) 
	VALUES(SSBOARD_SEQ.NEXTVAL,#{board.title},#{board.content},#{board.id},#{board.date})
	

</insert>
<update id = "update" parameterType="hashmap">
	UPDATE #{dbname} SET
	 ID = #{board.id}, TITLE = #{board.title}, CONTENT = #{board.content},DATE = #{board.date}, 
	 WHERE NO = #{board.no}
</update>
<delete id = "delete" parameterType="hashmap">
	DELETE FROM #{dbname} WHERE NO = #{id}

</delete>
<select id = "info" parameterType="hashmap" resultType="board">
<![CDATA[
	SELECT * FROM #{dbname} WHERE NO = #{id}
	]]>
</select>
<select id = "countofcontents" resultType="long">

<![CDATA[
	SELECT COUNT(*) FROM SSBOARD
	]]>
</select>



</mapper>