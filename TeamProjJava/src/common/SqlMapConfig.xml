<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.apache.org/dtd/mybatis-3-config.dtd"> 
<configuration> 
   <typeAliases>
   	<typeAlias type="vo.HomeBook" alias="homebook"/>
   	<typeAlias type="vo.Member" alias="member"/>
   	<typeAlias type="vo.Board" alias="board"/>
   	<typeAlias type="vo.TotalVO" alias="totalvo"/>
   	</typeAliases>
   
   <environments default = "development">
      <environment id = "development">
         <transactionManager type = "JDBC"/>  
            <dataSource type = "POOLED">
               <property name = "driver" value = "oracle.jdbc.driver.OracleDriver"/>
               <property name = "url" value = "jdbc:oracle:thin:@127.0.0.1:1521:xe"/>
               <property name = "username" value = "board"/>
               <property name = "password" value = "java"/>
            </dataSource>        
   </environment>

   <mappers>
      <mapper resource = "mapper/Member.xml"/>
      <mapper resource = "mapper/HomeBook.xml"/>
      <mapper resource = "mapper/Board.xml"/>
      <mapper resource = "mapper/Service.xml"/>
    </mappers>
   
</configuration>