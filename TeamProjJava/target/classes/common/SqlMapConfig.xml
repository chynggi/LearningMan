<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<typeAliases>	
	<typeAlias type="dto.Buser" alias="buser"/>
	<typeAlias type="dto.Board" alias="board"/>
		
	</typeAliases>	
	<environments default = "development">
		<environment id = "development">
		<transactionManager type="JDBC"/>
			<dataSource type = "POOLED">
				<property name="driver" value="oracle.jdbc.driver.OracleDriver"/>
				<property name="url" value="jdbc:oracle:thin:@192.168.0.18:1521:xe"/>
				<property name="username" value="team"/>
				<property name="password" value="team"/>
			</dataSource>
		</environment>
	</environments>
	<mappers>
		
	<mapper resource = "mapper/Buser.xml"/>
	<mapper resource = "mapper/SSBoard.xml"/>
	</mappers>
</configuration>