<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.apache.org/dtd/mybatis-3-config.dtd"> 
<configuration> 
  	<typeAliases>	
	<typeAlias type="dto.Buser" alias="buser"/>
	<typeAlias type="dto.Board" alias="board"/>
   	</typeAliases>
   
   <environments default = "development">
      <environment id = "development">
         <transactionManager type = "JDBC"/>  
            <dataSource type = "POOLED">
               <property name = "driver" value = "oracle.jdbc.driver.OracleDriver"/>
               <property name = "url" value = "jdbc:oracle:thin:@127.0.0.1:1521:xe"/>
               <property name = "username" value = "board"/>
               <property name = "password" value = "java"/>
            </dataSource>        
   </environment>

   <mappers>
	<mapper resource = "mapper/Buser.xml"/>
	<mapper resource = "mapper/DBMSBoard.xml"/>
    </mappers>
   
</configuration>