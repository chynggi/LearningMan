<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.apache.org/dtd/mybatis-3-config.dtd"> 
<configuration> 
   <typeAliases>
   		<typeAlias type="com.eyh.vo.Member" alias="Member"/> <!-- 멤버와 게시판 데이터 베이스 값 입력 필요 -->
   		<typeAlias type="com.eyh.vo.Board"  alias="Board"/>    	     
   </typeAliases>   
   
   <environments default = "development">
      <environment id = "development">
         <transactionManager type = "JDBC"/>  
            <dataSource type = "POOLED">
               <property name = "driver"   value = "oracle.jdbc.driver.OracleDriver"/>
               <property name = "url"      value = "jdbc:oracle:thin:@127.0.0.1:1521:xe"/>
               <property name = "username" value = "team"/> 
               <property name = "password" value = "team"/>
            </dataSource>        
      </environment>
   </environments>
	
   <mappers>
      <mapper resource = "com/eyh/mapper/#"/>
   
   </mappers>
   
</configuration>